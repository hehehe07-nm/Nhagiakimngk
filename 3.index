}

/* ===== ẢNH + TEXT NGANG ===== */
.flex-row{
  display:flex;
  gap:40px;
  align-items:center;
  justify-content:center;
  flex-wrap:wrap;
}
.flex-row img{
  max-width:320px;
  border-radius:18px;
  box-shadow:0 14px 32px rgba(0,0,0,.45);
}

/* ===== THÔNG TIN THÚ VỊ ===== */
