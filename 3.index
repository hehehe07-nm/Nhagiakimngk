  padding:28px;
  background:#6b5a3a;
  color:white;
  font-size:16px;
}
.contact-section {
  width: 90%;
  margin: 80px auto 40px;
  padding: 35px;
  background: rgba(255,255,255,0.45);
  backdrop-filter: blur(12px);
  border-radius: 22px;
  box-shadow: 0 10px 35px rgba(0,0,0,0.35);
  transition: all 0.45s ease;
  position: relative;
  z-index: 3;
}

.contact-section:hover {
  background: rgba(255,255,255,0.65);
  box-shadow: 0 0 40px rgba(255,220,150,0.9);
}

.contact-title {
  text-align: center;
  font-size: 36px;
  color: #B8860B;
  font-family: "Courier New", monospace;
  margin-bottom: 25px;
}

.contact-info {
  display: flex;
  justify-content: center;
  gap: 45px;
  flex-wrap: wrap;
  font-size: 22px;
}

.contact-box {
  background: rgba(255,245,220,0.65);
  padding: 20px 28px;
  border-radius: 16px;
  box-shadow: 0 8px 25px rgba(0,0,0,0.25);
  transition: all 0.35s ease;
