.contact-box:hover {
  background: rgba(255,245,220,0.9);
  box-shadow: 0 0 28px rgba(255,210,120,0.85);
  transform: translateY(-6px);
}

/* ===== CINEMATIC FOG ===== */
.fog {
  position: fixed;
  inset: 0;
  background:
    radial-gradient(circle at 40% 60%, rgba(255,255,255,.08), transparent 60%),
    radial-gradient(circle at 70% 30%, rgba(255,255,255,.05), transparent 55%);
  animation: fogDrift 25s ease-in-out infinite alternate;
  pointer-events: none;
  z-index: 2;
}

@keyframes fogDrift {
  from { transform: translateX(0); }
  to   { transform: translateX(-80px); }
}
/* ===== MEDIA BOX ===== */
