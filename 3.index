 <script>
        const container = document.getElementById('desert-particles-container');
        const particleCount = 500;
        const maxParticleSize = 1;

        function createParticle() {
            const particle = document.createElement('div');
            particle.className = 'sand-particle';
            const size = Math.random() * maxParticleSize + 1;
            particle.style.width = `${size}px`;
            particle.style.height = `${size}px`;
            particle.style.left = `${Math.random() * 100}vw`;
            particle.style.top = `${Math.random() * 100}vh`;
            const duration = Math.random() * 4 + 2;
            const xEnd = (Math.random() - 0.5) * 500;
            const yEnd = (Math.random() - 0.5) * 200;
            const keyframes = [
                {
                    transform: 'translate(0,0) rotate(0deg)',
                    opacity: 0,
                    offset:0
                },
                {
                    opacity: 0.8,
                    offset: 0.2
                },
                {
                    transform:`translate(${xEnd}px, ${yEnd}px) rotate(${Math.random() * 360}deg)`,
                    opacity: 0,
                    offset: 1
                }
            ];
            const options = {
                duration: duration * 1000,
                iterations: Infinity,
                easing: 'linear'
            };
            particle.animate(keyframes,options);
            container.appendChild(particle);
        }
        for (let i = 0; i <particleCount; i++) {
            createParticle();
        }
    </script>
