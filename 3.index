<style>
/* ===== NỀN TOÀN TRANG ===== */
body{
  margin:0;
  font-family:"Times New Roman",serif;
  line-height:1.8;
  color:#2b2b2b;

  background:
    radial-gradient(circle at top,
      rgba(255,245,220,0.25),
      rgba(10,15,35,0.7)
    ),
    linear-gradient(
      to bottom,
      rgba(20,30,60,0.85),
      rgba(60,90,130,0.75),
      rgba(190,150,90,0.55),
      rgba(255,225,170,0.45)
    ),
    url("https://i.pinimg.com/736x/57/d5/1a/57d51ab457bc6c40fe7306888f649c68.jpg");

  background-size:cover;
  background-position:center;
  background-attachment:fixed;
  overflow-x:hidden;
}

/* ===== STAR FIELD CINEMATIC ===== */
.stars {
  position: fixed;
  inset: 0;
  overflow: hidden;
  pointer-events: none;
  z-index: 1;
}

.stars span {
  position: absolute;
  background: white;
  border-radius: 50%;
  animation:
    starFloat linear infinite,
    starBlink ease-in-out infinite;
}

/* sao xa */
.stars span.small {
  width: 1.5px;
  height: 1.5px;
  opacity: 0.45;
  animation-duration: 22s, 4s;
}

/* sao gần */
.stars span.big {
  width: 3px;
  height: 3px;
  opacity: 0.9;
  animation-duration: 14s, 2.5s;
}

@keyframes starFloat {
  from { transform: translateY(-10vh) translateX(0); }
  to   { transform: translateY(120vh) translateX(-40vw); }
}

@keyframes starBlink {
  0% { opacity: 0.3; }
  50% { opacity: 1; }
  100% { opacity: 0.4; }
}
.shooting-star {
  position: fixed;
  top: -20%;
  width: 150px;
  height: 2px;
  background: linear-gradient(90deg, white, transparent);
  opacity: 0;
  transform: rotate(-20deg);
  animation: shoot 6s linear infinite;
  z-index: 2;
}

.shooting-star:nth-child(2) {
  animation-delay: 2s;
}
.shooting-star:nth-child(3) {
  animation-delay: 4s;
}

@keyframes shoot {
  0% {
    transform: translateX(0) translateY(0) rotate(-20deg);
    opacity: 0;
  }
  10% { opacity: 1; }
  30% {
    transform: translateX(-120vw) translateY(120vh) rotate(-20deg);
    opacity: 0;
  }
  100% { opacity: 0; }
}


/* ===== TIÊU ĐỀ ===== */
.giua-text{
  text-align:center;
  padding:60px 20px;
  position:relative;
  z-index:2;
}
h1{
  font-family:"Papyrus",fantasy;
  font-size:82px;
  color:#FFD97A;
  text-shadow:0 0 14px rgba(255,215,120,.9), 2px 2px 6px #000;
}
h3{
  font-size:38px;
  color:#F5C16C;
  text-shadow:1px 1px 4px #000;
}
/* ===== SOFT LIGHT AURA ===== */
.light-aura {
  position: fixed;
  inset: -20%;
  background:
    radial-gradient(circle at 50% 50%,
      rgba(255,240,180,.25),
      rgba(255,240,180,.1) 30%,
      transparent 60%);
  mix-blend-mode: screen;
  animation: auraMove 18s ease-in-out infinite alternate;
  pointer-events: none;
  z-index: 2;
}

@keyframes auraMove {
  from { transform: translate(-5%, -5%); }
  to   { transform: translate(5%, 5%); }
}

/* ===== BOX CHUNG ===== */
.main-box{
  width:90%;
  margin:40px auto;
  padding:40px;
  backdrop-filter:blur(10px);
  background:rgba(255,255,255,0.45);
  border-radius:22px;
